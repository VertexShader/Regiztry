@model Regiztry.Models.Merchandise
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>
    Merchandise or Services</h2>
<p>
    What Merchandise or Services can you help a startup with? This could be anything
    from pizza, cloud credits, to help building out software architecture. Whatever
    you would like to provide to a startup, just add it below!
</p>
@using (Html.BeginForm("create", "startups", FormMethod.Post, new { id = "formz" }))
{
    @Html.ValidationSummary(true)
    <ol>
        <li>
             @Html.LabelFor(model => model.Name)
            @Html.EditorFor(model => model.Name, new { @class = "text" })
            @Html.ValidationMessageFor(model => model.Name)
        </li>
        <li>
            @Html.LabelFor(model => model.Description)
            @Html.EditorFor(model => model.Description, new { @class = "text" })
            @Html.ValidationMessageFor(model => model.Description)
        </li>
        <li class="buttons">
            <input type="submit" name="imageField" id="imageField" value="Regizter Startup" class="send" />
            <div class="clr">
            </div>
        </li>
    </ol>
}