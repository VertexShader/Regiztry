<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="content-type" content="text/html; charset=utf-8" />
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/style.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Content/js/cufon-yui.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/js/arial.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/js/cuf_run.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/js/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/js/jquery-ui-1.8.13.custom.min.js")" type="text/javascript"></script>
</head>
<body>
    <div class="main">
        <div class="header">
            <div class="header_resize">
                <div class="logo">
                    <h1>
                        <a href="/"><span>Startup</span>Regiztry <small>Connecting new startups to the regiztry
                            of services.</small></a>
                    </h1>
                </div>
                <div class="clr">
                </div>
                <div class="menu">
                    <ul id="items">
                        <li><a href="../Home/Show" id="home"><span>Home</span></a></li>
                        <li><a href="../Home/About" id="about"><span>About</span></a></li>
                        <li><a href="../Home/Contact" id="contact"><span>Contact</span></a></li>
                    </ul>
                </div>
                <div class="search">
                    <form id="form1" name="form1" method="post" action="#">
                    <label>
                        <span>
                            <input name="q" type="text" class="keywords" id="textfield" maxlength="50" value="Search..." />
                        </span>
                    </label>
                    </form>
                </div>
                <div class="clr">
                </div>
            </div>
            <div class="clr">
            </div>
        </div>
        <div class="body">
            <div class="body_resize">
                <div class="left">
                    @RenderBody()
                </div>
                <div class="right">
                    <h2>
                        Sidebar Menu</h2>
                    <ul>
                        <li>@Html.ActionLink("Startups", "show", "startups")</li>
                        <li>@Html.ActionLink("Merchandise", "Show", "Merchandise") </li>
                    </ul>
                    <h2>
                        Future Sponsors We'd Love</h2>
                    <ul class="sponsors">
                        <li class="sponsors"><a href="http://www.github.com">Github</a><br />
                            Git the codez in the Github for eXtreme codez. </li>
                        <li class="sponsors"><a href="http://aws.amazon.com">Amazon Web Services</a><br />
                            Awesome Cloud Services with EC2, S3, and more!</li>
                        <li class="sponsors"><a href="http://www.appharbor.com">AppHarbor</a><br />
                            Windows Azure Done Right!</li>
                        <li class="sponsors"><a href="http://rubyonrails.org/">Ruby on Rails</a><br />
                            Ruby on Rails open-source web framework</li>
                        <li class="sponsors"><a href="http://www.microsoft.com/bizspark/">BizSpark</a><br />
                            Fast-track the success of your startup with software, support & visibility.</li>
                    </ul>
                </div>
                <div class="clr">
                </div>
            </div>
        </div>
        <div class="FBG">
            <div class="FBG_resize">
                <div class="blok">
                </div>
                <div class="blok">
                </div>
                <div class="blok">
                </div>
                <div class="clr">
                </div>
            </div>
        </div>
        <div class="footer">
            <div class="footer_resize">
                <p class="lf">
                    &copy; Copyright <a href="http://regiztry.apphb.com">Startup Regiztry</a>.</p>
                <p class="rf">
                    Created by a host of individuals in the <a href="https://github.com/Adron/Regiztry">
                        open source community on github</a>.
                </p>
                <div class="clr">
                </div>
            </div>
            <div class="clr">
            </div>
        </div>
    </div>
    <script language="javascript" type="text/javascript">
        var className = 'active';

        $('#home').removeClass(className);
        $('#contact').removeClass(className);
        $('#home').removeClass(className);

        switch (locationz) {
            case "home":
                $('#home').addClass(className);
                break;
            case "contact":
                $('#contact').addClass(className);
                break;
            case "about":
                $('#about').addClass(className);
                break;
            default:
                $('#home').addClass(className);
                break;
        }
    </script>
</body>
</html>
